# Ambiente de produção
NODE_ENV=production
BACKEND_ENV=prod

# Aplicação
BACKEND_DEV_PORT=3000
BACKEND_PROD_PORT_MAPPING=3000:3000

# Database - Production Environment
DATABASE_URL="postgresql://${PROD_DB_USER}:${PROD_DB_PASSWORD}@prod-database-host:5432/promata_prod"

# PostgreSQL
POSTGRES_DB=promata_prod
POSTGRES_USER=${PROD_DB_USER}
POSTGRES_PASSWORD=${PROD_DB_PASSWORD}

# Health checks
BACKEND_PROD_HEALTHCHECK_URL=http://localhost:3000/health

# Build info
BUILD_DATE=${BUILD_DATE}
VCS_REF=${GITHUB_SHA}
VERSION=prod-${GITHUB_RUN_NUMBER}

# Security
JWT_SECRET=${JWT_SECRET}
API_KEY=${API_KEY}

# External services
# REDIS_URL=${REDIS_URL}
SMTP_HOST=${SMTP_HOST}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}