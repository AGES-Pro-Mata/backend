generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @default(uuid())
  userType    UserType
  name        String
  email       String    @unique
  password    String
  phone       String
  cpf         String?   @unique
  gender      String
  rg          String?   @unique
  dob         DateTime?
  institution String?
  isForeign   Boolean
  active      Boolean   @default(true)
  address     Address?  @relation(fields: [addressId], references: [id])
  addressId   Int?      @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum UserType {
  ADMIN
  ROOT
  GUEST
  PROFESSOR
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String?
  number    String?
  city      String?
  zip       String?
  user      User?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
