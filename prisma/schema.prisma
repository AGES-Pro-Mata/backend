generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  user_type      UserType
  name           String
  email          String   @unique
  password       String
  phone          String
  cpf            String  @unique
  gender         String
  rg             String?  @unique
  dob            DateTime
  institution    String?
  active  Boolean
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}

enum UserType {
  ADMIN
  ROOT
  GUEST
  PROFESSOR
}

